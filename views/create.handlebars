<div class="flex pl-6" id="cform" x-data="{showcp: true}" x-show="showcp">
  <form method="post" hx-post="/posts/create" hx-target="#cform" hx-swap="outerHTML" class="flex flex-col">
    <label>Title</label>
    <br/>
    <input type="text" name="title" class="w-1/4 rounded-lg required border-gray-200 p-3 text-sm"/>
    <br/>
    <br/>
    <label>Tags</label>
    <br/>
    <input type="text" name="PostTagsString" class="w-1/4  rounded-lg border-gray-200 p-3 text-sm"/>
    <label>Text</label>
    <textarea rows = "20" cols = "130%" name="text"  required class="rounded-lg border-gray-200 p-3 block my-4"></textarea>
    <div class="justify-end flex">
      <button type="button" class="mr-8 border border-indigo-600 px-12 py-2 rounded-lg" @click="showcp = false">Cancel</button>
      <input class="inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500" type="submit" value="Submit Post" @click="$store.posts += 1" x-data>
    </div>
  </form>
</div>
